extends baseEmail

block content
  div.content-wrapper
    h2(style="color: var(--brand-deep-gold); margin-bottom: 24px;") Reset Your Password
    
    p Hi #{firstName},
    
    p You've requested to reset your password. Click the button below to create a new password:
    
    div(style="text-align: center; margin: 32px 0;")
      a.button(href=url) Reset Password
    
    p This reset link will expire in 20 minutes. If you didn't request this change, please ignore this email.
    
    p(style="color: var(--neutral-dark-gray); font-size: 0.9em;") For security reasons, please create a strong password and never share it with anyone.

